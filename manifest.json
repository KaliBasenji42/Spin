{
  "manifest_version": 3,
  
  "name": "Spin",
  "description": "Elements go spin, press trigger key (defualt = '@') or 'Spin'",
  "version": "1.0",
  
  "content_scripts": [{
    "js": ["script.js"],
    "run_at": "document_idle",
    "matches": ["<all_urls>"]
  }],
  
  "permissions": ["tabs"],
  
  "action": {
    "default_title": "Spin",
    "default_popup": "popup.html"
  }
}